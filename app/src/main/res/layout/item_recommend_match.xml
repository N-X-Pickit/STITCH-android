<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="292dp"
    android:layout_height="340dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="0dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_recommend_item_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cv_recommend_item_profile_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp"
            android:padding="2dp"
            app:civ_border_color="@color/yellow_06"
            app:civ_border_width="1dp"
            android:layout_marginStart="14dp"/>
        <TextView
            android:id="@+id/tv_recommend_item_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/cv_recommend_item_profile_image"
            app:layout_constraintTop_toTopOf="@id/cv_recommend_item_profile_image"
            app:layout_constraintBottom_toBottomOf="@id/cv_recommend_item_profile_image"
            android:textColor="@color/gray_04"
            android:textAppearance="@style/Subhead"
            android:text="temporaryNickName"
            android:layout_marginStart="6dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_recommend_item_bottom"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:background="@drawable/background_recommend_item_text_area"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <include
                android:id="@+id/chip_recommend"
                layout="@layout/chip_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <include
                android:id="@+id/chip_tennis"
                layout="@layout/chip_tennis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/chip_recommend"
                android:layout_marginStart="6dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintTop_toTopOf="parent"/>

            <include
                android:id="@+id/chip_badminton"
                layout="@layout/chip_badminton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/chip_recommend"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <include
                android:id="@+id/chip_pingpong"
                layout="@layout/chip_pingpong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/chip_recommend"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <include
                android:id="@+id/chip_soccer"
                layout="@layout/chip_soccer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/chip_recommend"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <include
                android:id="@+id/chip_running"
                layout="@layout/chip_running"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/chip_recommend"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <include
                android:id="@+id/chip_mountain"
                layout="@layout/chip_mountain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/chip_recommend"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <include
                android:id="@+id/chip_health"
                layout="@layout/chip_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/chip_recommend"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <include
                android:id="@+id/chip_basketball"
                layout="@layout/chip_basketball"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/chip_recommend"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <include
                android:id="@+id/chip_baseball"
                layout="@layout/chip_baseball"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/chip_recommend"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <include
                android:id="@+id/chip_golf"
                layout="@layout/chip_golf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/chip_recommend"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <include
                android:id="@+id/chip_etc"
                layout="@layout/chip_etc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/chip_recommend"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_recommend_item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:gravity="start"
                android:layout_marginTop="29dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAppearance="@style/Subhead"
                android:textColor="@color/gray_02"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Temporary Text Recommend Item Title"/>
            <TextView
                android:id="@+id/tv_recommend_item_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성동구"
                android:textAppearance="@style/Caption"
                android:textColor="@color/gray_04"
                app:layout_constraintTop_toBottomOf="@id/tv_recommend_item_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>
            <TextView
                android:id="@+id/tv_recommend_item_subtitle_divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Caption"
                android:textColor="@color/gray_04"
                android:text="ㅣ"
                android:layout_marginStart="1dp"
                app:layout_constraintStart_toEndOf="@id/tv_recommend_item_location"
                app:layout_constraintTop_toBottomOf="@id/tv_recommend_item_title"/>
            <TextView
                android:id="@+id/tv_recommend_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Caption"
                android:textColor="@color/gray_04"
                android:text="02.02(월)"
                android:layout_marginStart="1dp"
                app:layout_constraintStart_toEndOf="@id/tv_recommend_item_subtitle_divider"
                app:layout_constraintTop_toBottomOf="@id/tv_recommend_item_title"/>
            <TextView
                android:id="@+id/tv_recommend_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Caption"
                android:textColor="@color/gray_04"
                android:text="오후 3:00"
                android:layout_marginStart="1dp"
                app:layout_constraintStart_toEndOf="@id/tv_recommend_item_date"
                app:layout_constraintTop_toBottomOf="@id/tv_recommend_item_title"/>

            <ImageView
                android:id="@+id/iv_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_members"
                app:layout_constraintTop_toBottomOf="@id/tv_recommend_item_location"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_recommend_participant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@id/iv_members"
                app:layout_constraintTop_toTopOf="@id/iv_members"
                app:layout_constraintBottom_toBottomOf="@id/iv_members"
                android:textAppearance="@style/Body_2_long"
                android:textColor="@color/gray_02"
                android:text="3/4명"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cl_member_profile_image"
                app:layout_constraintTop_toTopOf="@id/iv_members"
                app:layout_constraintBottom_toBottomOf="@id/iv_members"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>