<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_match_image"
        android:layout_width="88dp"
        android:layout_height="88dp"
        app:contentPadding="0dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_match_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </com.google.android.material.card.MaterialCardView>

    <include
        android:id="@+id/chip_golf"
        layout="@layout/chip_golf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/cv_match_image"
        app:layout_constraintTop_toTopOf="@id/cv_match_image"
        tools:visibility="visible" />

    <include
        android:id="@+id/chip_tennis"
        layout="@layout/chip_tennis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/cv_match_image"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/chip_badminton"
        layout="@layout/chip_badminton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/cv_match_image"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/chip_pingpong"
        layout="@layout/chip_pingpong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/cv_match_image"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/chip_soccer"
        layout="@layout/chip_soccer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/cv_match_image"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/chip_running"
        layout="@layout/chip_running"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/cv_match_image"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/chip_mountain"
        layout="@layout/chip_mountain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/cv_match_image"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/chip_health"
        layout="@layout/chip_health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/cv_match_image"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/chip_basketball"
        layout="@layout/chip_basketball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/cv_match_image"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/chip_baseball"
        layout="@layout/chip_baseball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/cv_match_image"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/chip_etc"
        layout="@layout/chip_etc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/cv_match_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_match_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingHorizontal="12dp"
        android:text="Temporary Text Match Item Title longlong"
        android:textAppearance="@style/Subhead"
        android:textColor="@color/gray_02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cv_match_image"
        app:layout_constraintTop_toTopOf="@id/cv_match_image" />

    <TextView
        android:id="@+id/tv_match_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="성동구"
        android:textAppearance="@style/Caption"
        android:textColor="@color/gray_04"
        app:layout_constraintStart_toStartOf="@id/tv_match_title"
        app:layout_constraintTop_toBottomOf="@id/tv_match_title" />

    <TextView
        android:id="@+id/tv_match_subtitle_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="ㅣ"
        android:textAppearance="@style/Caption"
        android:textColor="@color/gray_04"
        app:layout_constraintStart_toEndOf="@id/tv_match_location"
        app:layout_constraintTop_toBottomOf="@id/tv_match_title" />

    <TextView
        android:id="@+id/tv_match_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="02.02(월)"
        android:textAppearance="@style/Caption"
        android:textColor="@color/gray_04"
        app:layout_constraintStart_toEndOf="@id/tv_match_subtitle_divider"
        app:layout_constraintTop_toBottomOf="@id/tv_match_title" />

    <TextView
        android:id="@+id/tv_match_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="오후 3:00"
        android:textAppearance="@style/Caption"
        android:textColor="@color/gray_04"
        app:layout_constraintStart_toEndOf="@id/tv_match_date"
        app:layout_constraintTop_toBottomOf="@id/tv_match_title" />

    <ImageView
        android:id="@+id/iv_members"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/ic_members"
        app:layout_constraintStart_toStartOf="@id/tv_match_title"
        app:layout_constraintTop_toBottomOf="@id/tv_match_location" />

    <TextView
        android:id="@+id/tv_participant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/home_match_participant"
        android:textAppearance="@style/Caption"
        android:textColor="@color/gray_02"
        app:layout_constraintBottom_toBottomOf="@id/iv_members"
        app:layout_constraintStart_toEndOf="@id/iv_members"
        app:layout_constraintTop_toTopOf="@id/iv_members" />
</androidx.constraintlayout.widget.ConstraintLayout>