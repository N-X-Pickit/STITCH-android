<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_14">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/tv_signup_2_top"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/signup_frag2_top"
            android:textAppearance="@style/Headline"
            android:textColor="@color/white"
            android:layout_marginHorizontal="16dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_signup_2_profile"
            android:layout_width="108dp"
            android:layout_height="108dp"
            app:civ_border_overlay="true"
            app:layout_constraintTop_toBottomOf="@id/tv_signup_2_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="42dp"
            android:src="@drawable/ic_person"
            app:civ_circle_background_color="@color/black"/>

        <ImageView
            android:id="@+id/iv_signup_2_profile_upload"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/image_view_round"
            app:layout_constraintStart_toStartOf="@id/iv_signup_2_profile"
            app:layout_constraintTop_toTopOf="@id/iv_signup_2_profile"
            android:layout_marginTop="70dp"
            android:layout_marginStart="70dp"
            android:src="@drawable/ic_camera"
            android:padding="14dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"
            android:src="@drawable/shining"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_profile_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_signup_2_profile"
            android:layout_marginTop="42dp"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>